{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "skipLibCheck": true,
      "strictNullChecks": false,
      "module": "esnext",
      "noImplicitAny": false,
      "outDir": "./dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "jsx": "react",
      "esModuleInterop": true,
      "strict": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
  }